{
	"name": "recommendedsettings",
	"displayName": "Recommended Settings",
	"description": "Visual Studio Code User Settings for screen reader users. Makes things simple for students who are learning to code",
	"version": "1.1.0",
	"publisher": "Statped",
	"author": {
		"name": "Øivind Rønning",
		"email": "oiron@statped.no",
		"url": "https://www.statped.no/"
	},
	"repository": {
		"type": "Git",
		"url": "https://github.com/oivron/settings-extension-vscode"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.65.0"
	},
	"keywords": [
		"settings",
		"accessibility",
		"screen reader"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "recommendedsettings.updateSettings",
				"title": "Recommended User Settings (Screen Readers)"
			},
			{
				"command": "recommendedsettings.toggleQuickSuggestions",
				"title": "Toggle Automatic Quick Suggestions"
			}
		],
		"keybindings": [
			{
				"command": "recommendedsettings.toggleQuickSuggestions",
				"key": "ctrl+alt+q",
				"mac": "cmd+alt+q"
			},
			{
				"command": "notifications.showList",
				"key": "ctrl+alt+n",
				"mac": "cmd+alt+n"
			},
			{
				"command": "workbench.statusBar.focusFirst",
				"key": "ctrl+alt+b",
				"mac": "cmd+alt+b"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.55",
		"@types/vscode": "^1.65.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.2.3",
		"mocha": "^9.2.2",
		"typescript": "^4.9.5",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"generator-code": "^1.7.3",
		"npm-check-updates": "^16.7.4"
	}
}
