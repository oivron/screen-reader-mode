{
	"name": "screen-reader-mode",
	"displayName": "Screen Reader Mode",
	"description": "Enhanced User Experience for Screen Reader Users. Ideal for Blind Students Learning to Code. Custom User Settings, Custom Keybinding, and Simplified Python Output.",
	"version": "2.0.18",
	"publisher": "Statped",
	"author": {
		"name": "Øivind Rønning",
		"email": "oiron@statped.no"
	},
	"repository": {
		"type": "Git",
		"url": "https://github.com/oivron/screen-reader-mode"
	},
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.96.0"
	},
	"keywords": [
		"accessibility",
		"screen reader",
		"settings",
		"JAWS",
		"NVDA",
		"VoiceOver"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Accessibility Signals",
				"properties": {
					"screenreadermode.accessibilitySignalsToggledOff": {
						"type": "boolean",
						"default": null,
						"description": "Specifies whether accessibility signals are turned off."
					}
				}
			},
			{
				"title": "Accessibility Verbosity",
				"properties": {
					"screenreadermode.accessibilityVerbosityToggledOff": {
						"type": "boolean",
						"default": null,
						"description": "Specifies whether accessibility verbosity are turned off."
					}
				}
			}
		],
		"commands": [
			{
				"command": "screenreadermode.toggleAccessibilitySignalsSettings",
				"title": "Toggle Accessibility Signals",
				"category": "Screen Reader Mode"
			},
			{
				"command": "screenreadermode.toggleAccessibilityVerbositySettings",
				"title": "Toggle Accessibility Verbosity",
				"category": "Screen Reader Mode"
			},
			{
				"command": "screenreadermode.showSettingsPicker",
				"title": "Tweak User Settings",
				"category": "Screen Reader Mode"
			},
			{
				"command": "screenreadermode.toggleQuickSuggestionsSettings",
				"title": "Toggle Automatic Quick Suggestions",
				"category": "Screen Reader Mode"
			},
			{
				"command": "screenreadermode.runPythonCode",
				"title": "Run current Python script",
				"category": "Screen Reader Mode"
			}
		],
		"keybindings": [
			{
				"command": "screenreadermode.runPythonCode",
				"key": "ctrl+alt+f5",
				"mac": "ctrl+alt+f5"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"knip": "knip"
	},
	"devDependencies": {
		"@types/glob": "^9.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^24.9.2",
		"@types/vscode": "1.96.0",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.39.0",
		"glob": "^11.0.3",
		"mocha": "^11.7.4",
		"typescript": "^5.9.3",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"generator-code": "^1.11.13",
		"npm-check-updates": "^19.1.2"
	}
}
